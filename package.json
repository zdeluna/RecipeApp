{
    "name": "RecipeApp",
    "version": "1.0.0",
    "scripts": {
        "client": "cd client && npm start",
        "restServer": "nodemon server.js",
        "graphQLServer": "GRAPH_ENV=test nodemon graphql_server/index.js",
        "dev": "concurrently --kill-others-on-fail \"npm run restServer\"  \"npm run graphQLServer\" \"npm run client\"",
        "start": "node server.js"
    },
    "dependencies": {
        "apollo-datasource-rest": "^0.6.11",
        "apollo-server": "^2.9.16",
        "apollo-server-express": "^2.9.16",
        "body-parser": "^1.19.0",
        "cheerio": "^1.0.0-rc.3",
        "cors": "^2.8.4",
        "express": "^4.17.1",
        "express-graphql": "^0.9.0",
        "firebase-admin": "^6.0.0",
        "globalize-webpack-plugin": "^3.0.0",
        "graphql": "^14.5.8",
        "react-router": "^5.1.2",
        "request": "^2.88.0"
    },
    "devDependencies": {
        "concurrently": "^3.5.0"
    }
}
